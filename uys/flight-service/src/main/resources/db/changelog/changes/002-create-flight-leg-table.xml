<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="002-create-flight-leg-table" author="uys-team">
        <createTable tableName="flight_legs">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="flight_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="leg_number" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="departure_station_code" type="VARCHAR(4)">
                <constraints nullable="false"/>
            </column>
            <column name="arrival_station_code" type="VARCHAR(4)">
                <constraints nullable="false"/>
            </column>
            <column name="scheduled_departure_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="scheduled_arrival_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="actual_departure_time" type="DATETIME"/>
            <column name="actual_arrival_time" type="DATETIME"/>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="gate" type="VARCHAR(10)"/>
            <column name="terminal" type="VARCHAR(10)"/>
            <column name="delay_minutes" type="INT"/>
            <column name="duration_minutes" type="INT"/>
            <column name="distance_km" type="INT"/>
            <column name="ground_time_minutes" type="INT"/>
            <column name="description" type="VARCHAR(500)"/>
            <column name="version" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint
            baseTableName="flight_legs"
            baseColumnNames="flight_id"
            constraintName="fk_flight_legs_flight"
            referencedTableName="flights"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>