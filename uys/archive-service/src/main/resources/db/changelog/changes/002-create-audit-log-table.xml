<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="002-create-audit-log-table" author="uys-team">
        <createTable tableName="audit_logs">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="action" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="service_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="resource_type" type="VARCHAR(50)"/>
            <column name="resource_id" type="VARCHAR(100)"/>
            <column name="user_id" type="VARCHAR(100)"/>
            <column name="ip_address" type="VARCHAR(45)"/>
            <column name="user_agent" type="VARCHAR(500)"/>
            <column name="audit_timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="old_values" type="TEXT"/>
            <column name="new_values" type="TEXT"/>
            <column name="description" type="VARCHAR(1000)"/>
            <column name="success" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="error_message" type="VARCHAR(1000)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>